<div class="container">
    <div class="row mt-3">
        <div class="col">
            @if(ViewBag.DeliveriesToCollect.Count > 0)
            {
                <h4>Deliveries to collect</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Delivery Id</th>
                            <th scope="col">Reciever Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var delivery in ViewBag.DeliveriesToCollect)
                        {
                            <tr>
                                <td>@delivery.DeliveryId</td>
                                <td>@delivery.User.FullName</td>
                                <td>@delivery.User.Address</td>
                                <td>@delivery.User.PhoneNumber</td>
                                <td><a href="/delivery/@delivery.DeliveryId">Change Status</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            @if(ViewBag.deliveriesToDistribute.Count > 0)
            {
                <h4>Deliveries to distribute</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Delivery Id</th>
                            <th scope="col">Reciever Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var delivery in ViewBag.deliveriesToDistribute)
                        {
                            <tr>
                                <td>@delivery.DeliveryId</td>
                                <td>@delivery.RecieverName</td>
                                <td>@delivery.Address</td>
                                <td>@delivery.PhoneNumber</td>
                                <td><a href="/delivery/@delivery.DeliveryId">Change Status</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>