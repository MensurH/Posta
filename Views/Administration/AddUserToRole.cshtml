@model AddUserViewModel 
@{
    ViewData["Title"] = "AddUserToRole";
}

<h1>Add User To Role</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="Administration" asp-action="AddUser" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId"></label>
                    <select asp-for="UserId" class="form-control">
                        @if (Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.Id">@user.UserName</option>
                            }
                        }

                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="RoleId" value="@Model.RoleId"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>

